# Production Environment for AWS Server (3.111.208.77)
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Server Configuration
FRONTEND_URL=http://3.111.208.77:3000
SERVER_IP=3.111.208.77

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/chatapp_production

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=30d

# Twilio Configuration (SMS OTP)
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890

# Cloudinary Configuration (Media Storage)
# Get these from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Redis Configuration (Caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Push Notifications (Optional)
FCM_SERVER_KEY=your-firebase-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
MAX_FILES_PER_MESSAGE=5
UPLOAD_PATH=/var/www/chatapp/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
OTP_RATE_LIMIT_MAX=5

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE=/var/www/chatapp/logs/app.log
ERROR_LOG_FILE=/var/www/chatapp/logs/error.log

# WebRTC Configuration (for calling)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password

# Feature Flags
ENABLE_STORIES=true
ENABLE_CALLS=true
ENABLE_GROUPS=true
ENABLE_FILE_SHARING=true
ENABLE_PUSH_NOTIFICATIONS=true

# Performance
CLUSTER_WORKERS=0  # 0 = use all CPU cores
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65000

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000

# AWS Specific
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=chatapp-media-bucket
