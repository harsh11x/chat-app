# Production Environment Configuration for AWS
NODE_ENV=production
PORT=3000

# Server Configuration
HOST=0.0.0.0
FRONTEND_URL=https://your-domain.com

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/chatapp_production

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this
JWT_EXPIRES_IN=30d

# Twilio Configuration (SMS OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890

# Cloudinary Configuration (Media Storage)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Redis Configuration (Caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Push Notifications
FCM_SERVER_KEY=your-firebase-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
MAX_FILES_PER_MESSAGE=5
UPLOAD_PATH=/var/www/chatapp/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
OTP_RATE_LIMIT_MAX=5

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key
CORS_ORIGIN=https://your-domain.com

# Logging
LOG_LEVEL=info
LOG_FILE=/var/www/chatapp/logs/app.log
ERROR_LOG_FILE=/var/www/chatapp/logs/error.log

# WebRTC Configuration (for calling)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=chatapp-media-bucket

# Feature Flags
ENABLE_STORIES=true
ENABLE_CALLS=true
ENABLE_GROUPS=true
ENABLE_FILE_SHARING=true
ENABLE_PUSH_NOTIFICATIONS=true

# Performance
CLUSTER_WORKERS=0  # 0 = use all CPU cores
MAX_CONNECTIONS=1000
KEEP_ALIVE_TIMEOUT=65000

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/ssl/certs/chatapp.crt
SSL_KEY_PATH=/etc/ssl/private/chatapp.key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
